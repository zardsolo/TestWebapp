@using puppyPlayDates.Controllers
@using puppyPlayDates.Data
@using puppyPlayDates.Models
@model ImageModel





<div class="container">
    <h3 class="display-4">Upload an Image</h3>
    <hr />



    <form method="post" enctype="multipart/form-data" asp-action="AddImage" asp-controller="Image">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>





        <div class="form-group">
            <label asp-for="UserImg" class="control-label"> </label>
            <div class="custom-file">
                <input asp-for="UserImg" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose File</label>
            </div>
            <span asp-validation-for="UserImg" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Save" class="btn-primary" />





            </div>
        </div>





    </form>









</div>